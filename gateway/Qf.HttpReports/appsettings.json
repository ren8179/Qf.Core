{
  "Name": "APIHttpReports",
  "Version": "V1.0.0.1",
  "Description": "API Gateway HttpReports",
  "IP": "127.0.0.1",
  "Port": 7151,
  "Auth": {
    "ApiName": "gateway",
    "ServerUrl": ""
  },
  "AllowOrigins": [ "*" ], //允许访问的域名
  "HttpReportsDashboard": {
    "ExpireDay": 7, //数据过期天数，默认3天，HttpReports 会自动清除过期的数据
    "Storage": { //存储信息
      "ConnectionString": "Server=.;Initial Catalog=WxShop_HttpReports;User Id=sa;Password=pass",
      "DeferSecond": 10, //批量数据入库的秒数，建议值 5-60
      "DeferThreshold": 100 //批量数据入库的数量，建议值100-1000
    },
    "Mail": {
      "Server": "smtp.163.com",
      "Port": 465,
      "Account": "UserName",
      "Password": "Password",
      "EnableSsL": true,
      "Switch": true
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug", //日志级别从低到高,依次为Debug,Information,Warning,Error,None
      "Override": {
        "Microsoft": "Error",
        "System": "Error"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithEnvironmentUserName", "WithThreadId" ],
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "C:\\Temp\\Logs\\APIHttpReports\\log.txt",
                "rollingInterval": "Day",
                "shared": true,
                "outputTemplate": "{Timestamp:HH:mm:ss.fff} [{Level:u3}] {ThreadId} {SourceContext} {Message:lj}{NewLine}{Exception}"
              }
            }
          ]
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
